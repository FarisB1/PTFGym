@page
@model LogoutModel
@{
    ViewData["Title"] = "Odjava";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <h1 class="card-title mb-4">@ViewData["Title"]</h1>

                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                                  asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    Kliknite ovdje za odjavu
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="logout-success">
                                <i class="fas fa-check-circle text-success mb-4" style="font-size: 3rem;"></i>
                                <p class="lead mb-4">Uspješno ste se odjavili iz aplikacije.</p>
                                <a href="/" class="btn btn-outline-primary">
                                    Povratak na početnu stranicu
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 1rem;
    }

    .card-title {
        color: #333;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

    .logout-success {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .lead {
        color: #666;
    }
</style>