                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Treneri" asp-action="Index">Treneri</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Izvjestaj" asp-action="Index">Izvještaj</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="Index">Termini</a>
                            </li>
                            <li class="u-nav-item dropdown">
                                <a class="u-button-style u-nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Trener") && User.IsInRole("Clan"))
                        {
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rezervacijas" asp-action="TrenerIndex">Rezervacije</a>
                            </li>
                            
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clanarinas" asp-action="ClanIndex">Clanarina</a>
                            </li>

                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="TrenerIndex">Termini</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Napredaks" asp-action="TrenerIndex">Napredak</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-controller="Chat" asp-action="TrainerChat">Chat</a>
                            </li>
                            <li class="u-nav-item dropdown">
                                <a class="u-button-style u-nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                    </li>
                                </ul>
                            </li>

                        }

                        @if (User.IsInRole("Clan") && !User.IsInRole("Trener"))
                        {
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rezervacijas" asp-action="ClanIndex">Rezervacije</a>
                            </li>

                                <li class="u-nav-item">
                                    <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clanarinas" asp-action="ClanIndex">Clanarina</a>
                                </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="ClanIndex">Termini</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Napredaks" asp-action="ClanIndex">Napredak</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rating" asp-action="Index">Ocjene</a>
                            </li>
                            <li class="u-nav-item">
                                <a class="u-button-style u-nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                            </li>
                            <li class="u-nav-item dropdown">
                                <a class="u-button-style u-nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
                <div class="u-custom-menu u-nav-container-collapse">
                    <div class="u-black u-container-style u-inner-container-layout u-opacity u-opacity-95 u-sidenav">
                        <div class="u-inner-container-layout u-sidenav-overflow">
                            <div class="u-menu-close"></div>
                            <ul class="u-align-center u-nav u-popupmenu-items u-unstyled u-nav-2">

                                <li class="u-nav-item">
                                    <a class="u-button-style u-nav-link" asp-area="" asp-controller="Home" asp-action="">Početna</a>
                                </li>
                                <li class="u-nav-item">
                                    <a class="u-button-style u-nav-link" asp-area="" asp-controller="Home" asp-action="About">O Nama</a>
                                </li>
                                <li class="u-nav-item">
                                    <a class="u-button-style u-nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                                </li>

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                                    </li>
                                }
                                @if (User.IsInRole("Administrator"))
                                {
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clans" asp-action="Index">Clanovi</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clanarinas" asp-action="Index">Clanarine</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rezervacija" asp-action="Index">Rezervacije</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Treneri" asp-action="Index">Treneri</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Izvjestaj" asp-action="Index">Izvještaj</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="Index">Termini</a>
                                    </li>
                                    <li class="u-nav-item dropdown">
                                        <a class="u-button-style u-nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            @User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                            <li>
                                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                                @if (User.IsInRole("Trener") && User.IsInRole("Clan"))
                                {
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rezervacijas" asp-action="TrenerIndex">Rezervacije</a>
                                    </li>

                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clanarinas" asp-action="ClanIndex">Clanarina</a>
                                    </li>

                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="TrenerIndex">Termini</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Napredaks" asp-action="TrenerIndex">Napredak</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-controller="Chat" asp-action="TrainerChat">Chat</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link " href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            @User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value
                                        </a>
                                    </li>

                                    <li class="u-nav-item">
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                    </li>

                                }

                                @if (User.IsInRole("Clan") && !User.IsInRole("Trener"))
                                {
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rezervacijas" asp-action="ClanIndex">Rezervacije</a>
                                    </li>

                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Clanarinas" asp-action="ClanIndex">Clanarina</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Termins" asp-action="ClanIndex">Termini</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Napredaks" asp-action="ClanIndex">Napredak</a>
                                    </li>
                                    <li class="u-nav-item">
                                        <a class="u-button-style u-nav-link" asp-area="" asp-controller="Rating" asp-action="Index">Ocjene</a>
                                    </li>
