@model PTFGym.Models.Termin

@{
    ViewData["Title"] = "Edit Termin";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Card Wrapper -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Uredi Termin</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- DatumVrijeme Field -->
                        <div class="form-group">
                            <label asp-for="DatumVrijeme" class="control-label font-weight-bold">Datum i Vrijeme</label>
                            <input asp-for="DatumVrijeme" class="form-control shadow-sm" />
                            <span asp-validation-for="DatumVrijeme" class="text-danger"></span>
                        </div>

                        <!-- VrstaTreninga Field -->
                        <div class="form-group">
                            <label asp-for="VrstaTreninga" class="control-label font-weight-bold">Vrsta Treninga</label>
                            <input asp-for="VrstaTreninga" class="form-control shadow-sm" />
                            <span asp-validation-for="VrstaTreninga" class="text-danger"></span>
                        </div>

                        <!-- MaksimalniBrojClanova Field -->
                        <div class="form-group">
                            <label asp-for="MaksimalniBrojClanova" class="control-label font-weight-bold">Maksimalni Broj Članova</label>
                            <input asp-for="MaksimalniBrojClanova" class="form-control shadow-sm" />
                            <span asp-validation-for="MaksimalniBrojClanova" class="text-danger"></span>
                        </div>

                        <!-- TrenerId Field -->
                        <div class="form-group">
                            <label asp-for="TrenerId" class="control-label font-weight-bold"></label>
                            <select asp-for="TrenerId" class="form-control shadow-sm" asp-items="ViewBag.TrenerIme"></select>
                            <span asp-validation-for="TrenerId" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <input type="submit" value="Save" class="btn btn-success btn-lg mt-5 shadow" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List Button -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary btn-lg shadow">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
