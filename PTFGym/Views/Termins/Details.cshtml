@model PTFGym.Models.Termin

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Termin Details Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Detalji Termina</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-secondary">@Model.VrstaTreninga</h4>
                    <p><strong>Datum i vrijeme:</strong> @Model.DatumVrijeme.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Maksimalni broj članova:</strong> @Model.MaksimalniBrojClanova</p>
                    <p>
                        <strong>Slobodna mjesta:</strong>
                        @(@Model.MaksimalniBrojClanova - @Model.Clanovi.Count)
                    </p>
                    <p><strong>Trainer:</strong> @Model.Trener?.Ime</p>
                </div>
            </div>

            <!-- Members Section -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h3 class="mb-0">Učesnici</h3>
                </div>
                <div class="card-body p-0">
                    <div style="max-height: 300px; overflow-y: auto;">
                        @if (Model.Clanovi != null && Model.Clanovi.Any())
                        {
                            <table class="table table-bordered table-striped table-hover mb-0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center">Ime</th>
                                        <th class="text-center">Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var clan in Model.Clanovi)
                                    {
                                        <tr>
                                            <td class="text-center">@clan.Ime</td>
                                            <td class="text-center">@clan.Email</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info text-center mb-0">
                                No members have joined this termin yet.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Back to List Button -->
            <div class="text-center mt-4 mb-4">
                <a href="@Url.Action("Index", "Termins")" class="btn btn-primary btn-lg rounded-pill shadow">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
