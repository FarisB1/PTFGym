@model PTFGym.Models.Napredak
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="bg-light p-4 mb-4 rounded shadow-sm">
        <h1 class="text-center m-0">Uredi Napredak</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <form asp-action="Edit" class="border rounded p-4 bg-white">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="ClanId" class="form-label">Clan</label>
                    <select asp-for="ClanId" class="form-select" asp-items="ViewBag.ClanId">
                        <option value="">-- Odaberi Clana --</option>
                    </select>
                    <span asp-validation-for="ClanId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrenerId" class="form-label">Trener</label>
                    <select asp-for="TrenerId" class="form-select" asp-items="ViewBag.TrenerId">
                        <option value="">-- Odaberi Trenera --</option>
                    </select>
                    <span asp-validation-for="TrenerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DatumUnosa" class="form-label">Datum Unosa</label>
                    <input asp-for="DatumUnosa" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DatumUnosa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tezina" class="form-label">Težina</label>
                    <input asp-for="Tezina" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="Tezina" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Biljeske" class="form-label">Bilješke</label>
                    <textarea asp-for="Biljeske" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Biljeske" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Spremi</button>
                    <a asp-action="TrenerIndex" class="btn btn-secondary">Nazad</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}