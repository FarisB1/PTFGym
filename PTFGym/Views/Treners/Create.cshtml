@model PTFGym.Models.Trener

@{
    ViewData["Title"] = "Kreiraj";
}

<div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8">
        <h1>Kreiraj</h1>

<h4>Trener</h4>
<hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" asp-antiforgery="true" class="text-danger"></div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Specijalnost" class="control-label"></label>
                <input asp-for="Specijalnost" class="form-control" />
                <span asp-validation-for="Specijalnost" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>

        <div style="margin-top:20px;">
            <a asp-action="Index">Nazad</a>
        </div>
</div>

</div>
<div class="col-md-2">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
